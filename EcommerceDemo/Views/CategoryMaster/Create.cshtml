@model EcommerceDemo.Models.CategoryViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="db-bx p-4 mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h3 class="mb-0"><strong>Add New Category</strong></h3>
        </div>
        <div>

        </div>
    </div>
</div>

<div class="db-bx mt-4">
    <div class="p-5">



        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="row">
                <div class="col-md-6">

                    <label for="CategoryName">Category Name</label>
                    @Html.TextBoxFor(model => model.CategoryName, new { @placeholder = "Category Name", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
                </div>

            </div>

            <div class="row" style="margin-top:20px;">
                <div class="col-md-5">

                </div>
                <div class="col-md-6">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a href="/CategoryMaster/Index" class="btn btn-default">Back</a>
                </div>
            </div>

        }
    </div>
</div>

